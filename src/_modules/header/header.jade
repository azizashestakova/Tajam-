mixin header(spec)
  header.header
    .container
      .row.justify-content-between.align-items-center
        .col-lg-2
          .logo
            a.logo__link(href="./")
              img.logo__img(src="images/content/icon-logo.png" alt="icon-logo")
        .col-lg-7.offset-lg-3
          nav.header__nav
            ul.header__list
              li.header__list-item
                a.header__link.active(href="./.html") Home 
              li.header__list-item
                a.header__link(href="#about") About
              li.header__list-item
                a.header__link(href="#expertise") Expertise
              li.header__list-item
                a.header__link(href="#team") Teams
              li.header__list-item
                a.header__link(href="#works") Works
              li.header__list-item
                a.header__link(href=".#quotes") People say
              li.header__list-item
                a.header__link(href="#contact") Contact


